<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.rubix.rubixcube.Viewport
        android:id="@+id/viewport"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-135dp"
        android:layout_marginBottom="-185dp"
        android:rotation="90"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5278527145367896/7937685482"
        app:layout_constraintBottom_toTopOf="@+id/viewport"
        app:layout_constraintEnd_toEndOf="parent"></com.google.android.gms.ads.AdView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-185dp"
        android:layout_marginEnd="-135dp"
        android:rotation="90"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5278527145367896/5431227056"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewport"></com.google.android.gms.ads.AdView>


</androidx.constraintlayout.widget.ConstraintLayout>